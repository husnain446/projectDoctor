<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#3F3F3F"
        android:gravity="center"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/patient_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_width="2dp"
            app:civ_fill_color="@android:color/white"
            app:civ_border_color="#FFF"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/image_placeholder" />

        <TextView
            android:id="@+id/patient_name_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patient_image"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Anne Miller"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/patient_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patient_name_dashboard"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="test@gmail.com"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/patient_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patient_email"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="27 years"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <ListView
        android:id="@+id/patient_appointment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
