<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:maxHeight="200dp"
            android:maxWidth="200dp"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FFF"
            app:civ_border_width="2dp"
            app:civ_fill_color="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/patient_nav_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patient_nav_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:singleLine="true"
            android:text="abc@xyz.com"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/patient_nav_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="27 Years"
            android:textColor="@color/orange"
            android:textSize="12dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/patient_nav_online_switch"
            android:layout_width="120dp"
            android:checked="true"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/online"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            app:theme="@style/switchTheme" />

    </LinearLayout>
</LinearLayout>
